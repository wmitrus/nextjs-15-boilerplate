{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "groupName": "patch-updates",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchUpdateTypes": ["minor"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev-minor-updates",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchUpdateTypes": ["minor"],
      "matchDepTypes": ["dependencies"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "groupName": "major-updates"
    },
    {
      "matchUpdateTypes": ["security"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackageNames": [
        "react",
        "@types/react",
        "react-dom",
        "@types/react-dom",
        "next",
        "@next/*"
      ],
      "groupName": "react-next-updates"
    },
    {
      "matchPackageNames": [
        "*jest*",
        "@testing-library/*",
        "playwright",
        "@playwright/*",
        "vitest",
        "@vitest/*",
        "@types/jest*",
        "jest-*",
        "msw"
      ],
      "groupName": "testing-updates"
    },
    {
      "matchPackageNames": [
        "eslint*",
        "@eslint/*",
        "prettier*",
        "@typescript-eslint/*",
        "typescript",
        "typescript-eslint",
        "eslint-*",
        "prettier-*"
      ],
      "groupName": "code-quality-updates"
    },
    {
      "matchPackageNames": [
        "storybook",
        "@storybook/*",
        "@chromatic-com/*",
        "chromatic"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "tailwindcss",
        "@tailwindcss/*",
        "prettier-plugin-tailwindcss"
      ],
      "groupName": "tailwind-updates"
    },
    {
      "matchPackageNames": ["pino*", "pino-*"],
      "groupName": "logging-updates"
    },
    {
      "matchPackageNames": [
        "@semantic-release/*",
        "semantic-release",
        "@commitlint/*",
        "husky",
        "lint-staged",
        "cz-conventional-changelog"
      ],
      "groupName": "release-tooling-updates"
    },
    {
      "matchPackageNames": ["@types/*"],
      "groupName": "type-definitions",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackageNames": [
        "zod",
        "@t3-oss/env-nextjs",
        "@mdx-js/react",
        "markdown-to-jsx"
      ],
      "groupName": "utility-updates"
    },
    {
      "matchPackageNames": ["dotenv*", "dotenv-*"],
      "groupName": "environment-updates"
    },
    {
      "matchPackageNames": ["ts-*", "@types/node", "globals"],
      "groupName": "typescript-tooling"
    },
    {
      "matchPackageNames": ["handlebars*", "plop*"],
      "groupName": "code-generation"
    },
    {
      "matchPackageNames": ["skott", "madge", "depcheck"],
      "groupName": "dependency-analysis"
    },
    {
      "matchPackageNames": ["serve*"],
      "groupName": "dev-servers",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackagePatterns": ["^@types/"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "type-definitions",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch"],
      "groupName": "dev-patch-updates",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackageNames": [
        "sharp",
        "core-js-pure",
        "esbuild",
        "highlight.js",
        "unrs-resolver",
        "@parcel/watcher"
      ],
      "groupName": "build-tools",
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "dependencyDashboard": true,
  "schedule": ["before 9am on Monday"],
  "timezone": "Etc/UTC",
  "assignees": ["@me"],
  "labels": ["dependencies", "automated"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 3,
  "minimumReleaseAge": "7 days",
  "stabilityDays": 7,
  "rebaseWhen": "conflicted",
  "platformAutomerge": true,
  "ignoreUnstable": true
}
