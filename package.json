{
  "name": "nextjs-15-boilerplate",
  "version": "1.3.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build-no-lint": "next build --no-lint",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prepare": "husky",
    "release": "semantic-release",
    "test": "jest",
    "test:watch": "jest --watch",
    "e2e": "pnpm exec playwright test",
    "e2e:ui": "pnpm exec playwright test --ui",
    "e2e:debug": "pnpm exec playwright test --debug",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "serve-storybook": "serve storybook-static",
    "chromatic": "dotenv -e .env.local npx chromatic",
    "skott": "pnpm exec skott --trackThirdPartyDependencies --trackBuiltinDependencies",
    "skott:check:only": "pnpm exec skott --trackThirdPartyDependencies --trackBuiltinDependencies --displayMode=raw",
    "depcheck": "pnpm exec depcheck --config=.depcheck.json",
    "madge": "pnpm exec madge --circular ./src"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@t3-oss/env-nextjs": "^0.12.0",
    "next": "15.2.1",
    "pino": "^9.6.0",
    "pino-logflare": "^0.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "3.2.5",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.21.0",
    "@next/eslint-plugin-next": "^15.2.1",
    "@playwright/test": "^1.51.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@storybook/addon-essentials": "8.6.4",
    "@storybook/addon-onboarding": "8.6.4",
    "@storybook/blocks": "8.6.4",
    "@storybook/experimental-addon-test": "8.6.4",
    "@storybook/experimental-nextjs-vite": "8.6.4",
    "@storybook/nextjs": "8.6.4",
    "@storybook/react": "8.6.4",
    "@storybook/test": "8.6.4",
    "@tailwindcss/postcss": "^4.0.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/jest-json-schema": "^6.1.4",
    "@types/node": "^20.17.23",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitest/browser": "^3.0.8",
    "@vitest/coverage-v8": "^3.0.8",
    "chromatic": "^11.27.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.21.0",
    "eslint-config-next": "15.2.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.11.4",
    "eslint-plugin-testing-library": "^7.1.1",
    "globals": "^16.0.0",
    "handlebars-helpers": "^0.10.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-json-schema": "^6.1.0",
    "lint-staged": "^15.4.3",
    "msw": "^2.7.3",
    "pino-pretty": "^13.0.0",
    "playwright": "^1.51.0",
    "plop": "^4.0.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "semantic-release": "^24.2.3",
    "skott": "^0.35.4",
    "storybook": "8.6.4",
    "tailwindcss": "^4.0.11",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vitest": "^3.0.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "core-js-pure",
      "esbuild",
      "msw",
      "sharp"
    ],
    "ignoredBuiltDependencies": [
      "@parcel/watcher"
    ]
  }
}
